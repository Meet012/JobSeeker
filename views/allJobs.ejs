<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
      .job-card {
        margin-bottom: 20px;
      }
    </style>
  </head>
  <body>
    <%- include('./components/navbar.ejs') %>

    <div class="container mt-5">
      <h2>Job Listings</h2>
      <div class="row">
        <% jobs.forEach(function(job) { %>
          <% if (job.role !== "declined") { %>
            <div class="col-md-4">
              <div class="card job-card">
                <div class="card-body">
                  <h5 class="card-title"><%= job.position %></h5>
                  <h6 class="card-subtitle mb-2 text-muted"><%= job.company %></h6>
                  <p class="card-text">Salary: <%= job.minSalary %></p>
                  <a href="/all-jobs/<%= job._id %>" class="btn btn-primary mr-2">View</a>
                  
                  <a href="/apply/<%= job._id %>" class="btn btn-primary mr-2">Apply</a>
                </div>
              </div>
            </div>
          <% } %>
        <% }); %>
      </div>
    </div>
    <!-- Footer -->
    <%- include('./components/footer.ejs') %> 
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>