<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Create Job</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  </head>
  <body>
    <%- include('./components/navbar.ejs') %>
    <div class="container content">

    </div>
    <form class="mx-auto" style="max-width: 1300px;" method="post" action="/job/create-job">
        <div class="mb-3">
          <label for="companyName" class="form-label">Company Name</label>
          <input type="text" class="form-control" name="company" id="companyName" placeholder="Enter company name">
        </div>
        <div class="mb-3">
          <label for="minSalary" class="form-label">Minimum Salary</label>
          <input type="number" class="form-control" name="minSalary" id="minSalary" placeholder="Enter minimum salary">
        </div>
        <div class="mb-3">
          <label for="position" class="form-label">Position</label>
          <input type="text" class="form-control" name="position" id="position" placeholder="Enter position">
        </div>

        <div class="mb-3">
          <label for="minSalary" class="form-label">No of opening</label>
          <input type="number" class="form-control" name="opening" id="minSalary" placeholder="Enter minimum salary">
        </div>

        <div class="mb-3">
          <label for="description" class="form-label">Description</label>
          <textarea class="form-control" name="description" id="description" placeholder="Enter job description"></textarea>
        </div>

        <div class="mb-3">
          <label for="status" class="form-label">Status</label>
          <select class="form-select" name="role" id="status">
            <option value="pending">Pending</option>
            <option value="decline">Decline</option>
            <option value="interviewed">Interviewed</option>
          </select>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>

      <!-- Footer -->
    <%- include('./components/footer.ejs') %> 
      
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>