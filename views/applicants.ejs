<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Applied Jobs</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
        .card {
            margin: 20px;
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <%- include('./components/navbar.ejs') %>
    <div class="container">
        <h2>Applicant Information</h2>
        <div class="row">
          <!-- Loop through each applicant -->
          <% applicants.forEach(function(applicant) { %>
            <div class="col-md-6">
              <div class="card">
                <div class="card-body">
                  <p class="card-text">Name: <%= applicant.name %></p>
                  <p class="card-text">Phone Number: <%= applicant.phoneNo %></p>
                  <p class="card-text">Age: <%= applicant.age %></p>
                  <p class="card-text">Gender: <%= applicant.gender %></p>
                  <p class="card-text">Email: <%= applicant.email %></p>
                  <a href="/job/deleteApplicant/<%= applicant._id %>" class="btn btn-danger">Delete</a>
                </div>
              </div>
            </div>
          <% }); %>
        </div>
      </div>

      <!-- Footer -->
    <%- include('./components/footer.ejs') %> 
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
